<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Wizard para Agregar -->
        <record id="view_alumno_wizard_agregar" model="ir.ui.view">
            <field name="name">alumno.wizard.agregar</field>
            <field name="model">alumno.wizard</field>
            <field name="arch" type="xml">
                <form string="Agregar Nuevo Alumno">
                    <group>
                        <field name="name"/>
                        <field name="numero"/>
                        <field name="curso_id"/>
                    </group>
                    <footer>
                        <button name="execute_action" string="Agregar" type="object" class="oe_highlight"/>
                        <button string="Cancelar" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Wizard para Actualizar -->
        <record id="view_alumno_wizard_actualizar" model="ir.ui.view">
            <field name="name">alumno.wizard.actualizar</field>
            <field name="model">alumno.wizard</field>
            <field name="arch" type="xml">
                <form string="Actualizar Alumno">
                    <group>
                        <field name="name"/>
                        <field name="numero"/>
                        <field name="curso_id"/>
                    </group>
                    <footer>
                        <button name="execute_action" string="Actualizar" type="object" class="oe_highlight"/>
                        <button string="Cancelar" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Wizard para Eliminar -->
        <record id="view_alumno_wizard_eliminar" model="ir.ui.view">
            <field name="name">alumno.wizard.eliminar</field>
            <field name="model">alumno.wizard</field>
            <field name="arch" type="xml">
                <form string="¿Eliminar Alumno?">
                    <group>
                        <label string="¿Está seguro que desea eliminar el siguiente alumno?"/>
                        <field name="name" readonly="1"/>
                        <field name="numero" readonly="1"/>
                        <field name="curso_id" readonly="1"/>
                    </group>
                    <footer>
                        <button name="execute_action" string="Eliminar" type="object" class="oe_highlight"/>
                        <button string="Cancelar" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Acciones para los wizards -->
        <record id="action_alumno_wizard_agregar" model="ir.actions.act_window">
            <field name="name">Agregar Alumno</field>
            <field name="res_model">alumno.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_alumno_wizard_agregar"/>
            <field name="target">new</field>
        </record>

        <record id="action_alumno_wizard_actualizar" model="ir.actions.act_window">
            <field name="name">Actualizar Alumno</field>
            <field name="res_model">alumno.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_alumno_wizard_actualizar"/>
            <field name="target">new</field>
        </record>

        <record id="action_alumno_wizard_eliminar" model="ir.actions.act_window">
            <field name="name">Eliminar Alumno</field>
            <field name="res_model">alumno.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_alumno_wizard_eliminar"/>
            <field name="target">new</field>
        </record>
    </data>
</openerp>