<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Tree View -->
        <record id="view_alumno_tree" model="ir.ui.view">
            <field name="name">school.alumno.tree</field>
            <field name="model">school.alumno</field>
            <field name="arch" type="xml">
                <tree colors="red:not aula_id;blue:aula_id and total_cursos&gt;0;orange:total_cursos==0">
                    <field name="name"/>
                    <field name="numero"/>
                    <field name="aula_id"/>
                    <field name="total_cursos"/>
                    <field name="create_date"/>
                    <button name="abrir_wizard_actualizar" string="Actualizar" type="object" class="oe_highlight"/>
                    <button name="abrir_wizard_eliminar" string="Eliminar" type="object" class="oe_link"/>
                    <button name="%(school_management.reporte_alumnos_pdf)d" 
                            string="ðŸ“„ Reporte PDF" 
                            type="action" 
                            class="oe_highlight"
                            help="Generar reporte completo de alumnos en formato PDF"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_alumno_form" model="ir.ui.view">
            <field name="name">school.alumno.form</field>
            <field name="model">school.alumno</field>
            <field name="arch" type="xml">
                <form string="Alumno">
                    <header>
                        <button name="abrir_wizard_agregar" string="Anadir Nuevo Alumno" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nombre del Alumno"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Informacion Personal">
                                <field name="numero" readonly="1"/>
                                <field name="aula_id"/>
                                <field name="total_cursos" readonly="1"/>
                            </group>
                            <group string="Fechas">
                                <field name="create_date" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                                <field name="create_uid" readonly="1"/>
                                <field name="write_uid" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Cursos Inscritos">
                                <field name="curso_ids">
                                    <tree string="Cursos">
                                        <field name="codigo"/>
                                        <field name="name"/>
                                        <field name="aula_id"/>
                                        <field name="profesor_id"/>
                                        <field name="total_estudiantes"/>
                                        <field name="total_examenes"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Calificaciones">
                                <field name="calificacion_ids">
                                    <tree string="Calificaciones" colors="red:not aprobado;green:aprobado">
                                        <field name="examen_id"/>
                                        <field name="punteo"/>
                                        <field name="punteo_maximo"/>
                                        <field name="porcentaje_obtenido"/>
                                        <field name="aprobado"/>
                                        <field name="estado"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Graph View -->
        <record id="view_alumno_graph" model="ir.ui.view">
            <field name="name">school.alumno.graph</field>
            <field name="model">school.alumno</field>
            <field name="type">graph</field>
            <field name="arch" type="xml">
                <graph string="Analisis de Alumnos" type="bar">
                    <field name="aula_id"/>
                    <field name="create_date" interval="month"/>
                </graph>
            </field>
        </record>

        <!-- Search View con filtros avanzados -->
        <record id="view_alumno_search" model="ir.ui.view">
            <field name="name">school.alumno.search</field>
            <field name="model">school.alumno</field>
            <field name="arch" type="xml">
                <search string="Buscar Alumnos">
                    <!-- Campos de busqueda -->
                    <field name="name" string="Nombre del Alumno" filter_domain="[('name','ilike',self)]"/>
                    <field name="numero" string="Numero de Estudiante" filter_domain="[('numero','ilike',self)]"/>
                    <field name="aula_id" string="Aula"/>
                    <field name="curso_ids" string="Cursos"/>
                    
                    <!-- Filtros predefinidos -->
                    <filter string="Sin Aula Asignada" domain="[('aula_id','=',False)]"/>
                    <filter string="Con Aula Asignada" domain="[('aula_id','!=',False)]"/>
                    <filter string="Sin Cursos" domain="[('total_cursos','=',0)]"/>
                    <filter string="Con Cursos" domain="[('total_cursos','>',0)]"/>
                    
                    <separator/>
                    
                    <!-- Filtros por aula -->
                    <filter string="Aula 101" domain="[('aula_id.name','=','Aula 101')]"/>
                    <filter string="Aula 102" domain="[('aula_id.name','=','Aula 102')]"/>
                    
                    <separator/>
                    
                    <!-- Filtros por cursos -->
                    <filter string="Matematicas" domain="[('curso_ids.name','ilike','Matematicas')]"/>
                    <filter string="Fisica" domain="[('curso_ids.name','ilike','Fisica')]"/>
                    <filter string="Computacion" domain="[('curso_ids.name','ilike','Computacion')]"/>
                    
                    <separator/>
                    
                    <!-- Filtros por fecha -->
                    <filter string="Registrados Hoy" domain="[('create_date','&gt;=',time.strftime('%%Y-%%m-%%d'))]"/>
                    <filter string="Registrados Esta Semana" domain="[('create_date','&gt;=', (datetime.date.today()-datetime.timedelta(days=7)).strftime('%%Y-%%m-%%d'))]"/>
                    <filter string="Registrados Este Mes" domain="[('create_date','&gt;=', datetime.date.today().strftime('%%Y-%%m-01'))]"/>
                    
                    <separator/>
                    
                    <!-- Agrupaciones -->
                    <group expand="0" string="Agrupar Por">
                        <filter string="Aula" context="{'group_by':'aula_id'}"/>
                        <filter string="Total de Cursos" context="{'group_by':'total_cursos'}"/>
                        <filter string="Fecha de Registro" context="{'group_by':'create_date:month'}"/>
                        <filter string="Usuario Creador" context="{'group_by':'create_uid'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action para Alumnos con todas las vistas -->
        <record id="action_alumnos" model="ir.actions.act_window">
            <field name="name">Alumnos</field>
            <field name="res_model">school.alumno</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="search_view_id" ref="view_alumno_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="limit">80</field>
        </record>
    </data>
</openerp>