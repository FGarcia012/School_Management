<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Tree View con botones -->
        <record id="view_aula_tree" model="ir.ui.view">
            <field name="name">school.aula.tree</field>
            <field name="model">school.aula</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="capacidad"/>
                    <button name="abrir_wizard_actualizar" string="Actualizar" type="object" class="oe_highlight"/>
                    <button name="abrir_wizard_eliminar" string="Eliminar" type="object" class="oe_link"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_aula_form" model="ir.ui.view">
            <field name="name">school.aula.form</field>
            <field name="model">school.aula</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="capacidad"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="abrir_wizard_agregar" string="AÃ±adir Nueva Aula" type="object" class="oe_highlight"/>
                        <button string="Cancelar" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_aula_search" model="ir.ui.view">
            <field name="name">school.aula.search</field>
            <field name="model">school.aula</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="capacidad"/>
                    <filter string="Capacidad > 25" domain="[('capacidad','>',25)]"/>
                </search>
            </field>
        </record>

        <!-- Action para Aulas -->
        <record id="action_aulas" model="ir.actions.act_window">
            <field name="name">Aulas</field>
            <field name="res_model">school.aula</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="limit">80</field>
        </record>
    </data>
</openerp>