<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Tree View -->
        <record id="view_aula_tree" model="ir.ui.view">
            <field name="name">school.aula.tree</field>
            <field name="model">school.aula</field>
            <field name="arch" type="xml">
                <tree colors="red:capacidad&lt;20;orange:capacidad&lt;30;green:capacidad&gt;=30">
                    <field name="name"/>
                    <field name="capacidad"/>
                    <field name="create_date"/>
                    <field name="write_date"/>
                    <button name="abrir_wizard_actualizar" string="Actualizar" type="object" class="oe_highlight"/>
                    <button name="abrir_wizard_eliminar" string="Eliminar" type="object" class="oe_link"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_aula_form" model="ir.ui.view">
            <field name="name">school.aula.form</field>
            <field name="model">school.aula</field>
            <field name="arch" type="xml">
                <form string="Aula">
                    <header>
                        <button name="abrir_wizard_agregar" string="Añadir Nueva Aula" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nombre del Aula"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="capacidad"/>
                                <field name="create_date" readonly="1"/>
                            </group>
                            <group>
                                <field name="write_date" readonly="1"/>
                                <field name="create_uid" readonly="1"/>
                                <field name="write_uid" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Graph View -->
        <record id="view_aula_graph" model="ir.ui.view">
            <field name="name">school.aula.graph</field>
            <field name="model">school.aula</field>
            <field name="type">graph</field>
            <field name="arch" type="xml">
                <graph string="Análisis de Aulas" type="bar">
                    <field name="name"/>
                    <field name="capacidad"/>
                </graph>
            </field>
        </record>

        <!-- Search View con filtros avanzados -->
        <record id="view_aula_search" model="ir.ui.view">
            <field name="name">school.aula.search</field>
            <field name="model">school.aula</field>
            <field name="arch" type="xml">
                <search string="Buscar Aulas">
                    <!-- Campos de búsqueda -->
                    <field name="name" string="Nombre del Aula" filter_domain="[('name','ilike',self)]"/>
                    <field name="capacidad" string="Capacidad"/>
                    
                    <!-- Filtros por capacidad -->
                    <filter string="Capacidad Pequeña (&lt; 20)" domain="[('capacidad','&lt;',20)]"/>
                    <filter string="Capacidad Media (20-29)" domain="[('capacidad','&gt;=',20),('capacidad','&lt;',30)]"/>
                    <filter string="Capacidad Grande (&gt;= 30)" domain="[('capacidad','&gt;=',30)]"/>
                    
                    <separator/>
                    
                    <!-- Filtros específicos -->
                    <filter string="Aula A1" domain="[('name','=','Aula A1')]"/>
                    <filter string="Aula A2" domain="[('name','=','Aula A2')]"/>
                    <filter string="Laboratorio" domain="[('name','ilike','Laboratorio')]"/>
                    
                    <separator/>
                    
                    <!-- Filtros por fecha -->
                    <filter string="Creadas Hoy" domain="[('create_date','&gt;=',time.strftime('%%Y-%%m-%%d'))]"/>
                    <filter string="Creadas Esta Semana" domain="[('create_date','&gt;=', (datetime.date.today()-datetime.timedelta(days=7)).strftime('%%Y-%%m-%%d'))]"/>
                    <filter string="Creadas Este Mes" domain="[('create_date','&gt;=', datetime.date.today().strftime('%%Y-%%m-01'))]"/>
                    
                    <separator/>
                    
                    <!-- Agrupaciones -->
                    <group expand="0" string="Agrupar Por">
                        <filter string="Rango de Capacidad" context="{'group_by':'capacidad'}"/>
                        <filter string="Fecha de Creación" context="{'group_by':'create_date:month'}"/>
                        <filter string="Usuario Creador" context="{'group_by':'create_uid'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action para Aulas con todas las vistas -->
        <record id="action_aulas" model="ir.actions.act_window">
            <field name="name">Aulas</field>
            <field name="res_model">school.aula</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="search_view_id" ref="view_aula_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="limit">80</field>
        </record>
    </data>
</openerp>