<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Tree View -->
        <record id="view_curso_tree" model="ir.ui.view">
            <field name="name">school.curso.tree</field>
            <field name="model">school.curso</field>
            <field name="arch" type="xml">
                <tree colors="red:total_examenes==0;orange:total_estudiantes==0;green:total_examenes&gt;0 and total_estudiantes&gt;0">
                    <field name="codigo"/>
                    <field name="name"/>
                    <field name="aula_id"/>
                    <field name="profesor_id"/>
                    <field name="total_estudiantes"/>
                    <field name="total_examenes"/>
                    <field name="promedio_examenes"/>
                    <button name="abrir_wizard_actualizar" string="Actualizar" type="object" class="oe_highlight"/>
                    <button name="abrir_wizard_eliminar" string="Eliminar" type="object" class="oe_link"/>
                    <button name="%(school_management.reporte_cursos_pdf)d" 
                            string="ðŸ“„ Reporte PDF" 
                            type="action" 
                            class="oe_highlight"
                            help="Generar reporte completo de cursos en formato PDF"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_curso_form" model="ir.ui.view">
            <field name="name">school.curso.form</field>
            <field name="model">school.curso</field>
            <field name="arch" type="xml">
                <form string="Curso">
                    <header>
                        <button name="abrir_wizard_agregar" string="Anadir Nuevo Curso" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nombre del Curso"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Informacion del Curso">
                                <field name="codigo"/>
                                <field name="description"/>
                                <field name="aula_id"/>
                                <field name="profesor_id"/>
                            </group>
                            <group string="Estadisticas">
                                <field name="total_estudiantes" readonly="1"/>
                                <field name="total_examenes" readonly="1"/>
                                <field name="promedio_examenes" readonly="1"/>
                                <field name="create_date" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Estudiantes Inscritos">
                                <field name="alumno_ids">
                                    <tree string="Estudiantes">
                                        <field name="numero"/>
                                        <field name="name"/>
                                        <field name="aula_id"/>
                                        <field name="total_cursos"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Examenes del Curso">
                                <field name="examen_ids">
                                    <tree string="Examenes">
                                        <field name="name"/>
                                        <field name="tipo_examen"/>
                                        <field name="fecha_examen"/>
                                        <field name="punteo_maximo"/>
                                        <field name="total_estudiantes"/>
                                        <field name="promedio_examen"/>
                                        <field name="aprobados"/>
                                        <field name="reprobados"/>
                                        <button name="generar_calificaciones" string="Generar Calificaciones" type="object" class="oe_highlight"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Horarios Programados">
                                <field name="horario_ids">
                                    <tree string="Horarios">
                                        <field name="dia_semana"/>
                                        <field name="turno"/>
                                        <field name="hora_inicio_display"/>
                                        <field name="hora_fin_display"/>
                                        <field name="aula_id"/>
                                        <field name="profesor"/>
                                        <field name="activo"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Graph View -->
        <record id="view_curso_graph" model="ir.ui.view">
            <field name="name">school.curso.graph</field>
            <field name="model">school.curso</field>
            <field name="type">graph</field>
            <field name="arch" type="xml">
                <graph string="Analisis de Cursos" type="bar">
                    <field name="name"/>
                    <field name="create_date" interval="month"/>
                </graph>
            </field>
        </record>

        <!-- Search View con filtros avanzados -->
        <record id="view_curso_search" model="ir.ui.view">
            <field name="name">school.curso.search</field>
            <field name="model">school.curso</field>
            <field name="arch" type="xml">
                <search string="Buscar Cursos">
                    <!-- Campos de busqueda -->
                    <field name="name" string="Nombre del Curso" filter_domain="[('name','ilike',self)]"/>
                    <field name="description" string="Descripcion" filter_domain="[('description','ilike',self)]"/>
                    
                    <!-- Filtros predefinidos -->
                    <filter string="Matematicas" domain="[('name','=','Matematicas')]"/>
                    <filter string="Fisica" domain="[('name','=','Fisica')]"/>
                    <filter string="Computacion" domain="[('name','=','Computacion')]"/>
                    <filter string="Ingles" domain="[('name','=','Ingles')]"/>
                    <filter string="Religion" domain="[('name','=','Religion')]"/>
                    
                    <separator/>
                    
                    <!-- Filtros por fecha -->
                    <filter string="Creados Hoy" domain="[('create_date','&gt;=',time.strftime('%%Y-%%m-%%d'))]"/>
                    <filter string="Creados Esta Semana" domain="[('create_date','&gt;=', (datetime.date.today()-datetime.timedelta(days=7)).strftime('%%Y-%%m-%%d'))]"/>
                    <filter string="Creados Este Mes" domain="[('create_date','&gt;=', datetime.date.today().strftime('%%Y-%%m-01'))]"/>
                    
                    <separator/>
                    
                    <!-- Agrupaciones -->
                    <group expand="0" string="Agrupar Por">
                        <filter string="Nombre del Curso" context="{'group_by':'name'}"/>
                        <filter string="Fecha de Creacion" context="{'group_by':'create_date:month'}"/>
                        <filter string="Usuario Creador" context="{'group_by':'create_uid'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action para Cursos con todas las vistas -->
        <record id="action_cursos" model="ir.actions.act_window">
            <field name="name">Cursos</field>
            <field name="res_model">school.curso</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="search_view_id" ref="view_curso_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="limit">80</field>
        </record>
    </data>
</openerp>