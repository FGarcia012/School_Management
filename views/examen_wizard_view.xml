<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Wizard para Agregar -->
        <record id="view_examen_wizard_agregar" model="ir.ui.view">
            <field name="name">examen.wizard.agregar</field>
            <field name="model">examen.wizard</field>
            <field name="arch" type="xml">
                <form string="Agregar Nuevo Examen">
                    <group>
                        <field name="name"/>
                        <field name="curso_id"/>
                        <field name="pregunta"/>
                        <field name="respuesta"/>
                        <field name="punteo"/>
                    </group>
                    <footer>
                        <button name="execute_action" string="Agregar" type="object" class="oe_highlight"/>
                        <button string="Cancelar" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Wizard para Actualizar -->
        <record id="view_examen_wizard_actualizar" model="ir.ui.view">
            <field name="name">examen.wizard.actualizar</field>
            <field name="model">examen.wizard</field>
            <field name="arch" type="xml">
                <form string="Actualizar Examen">
                    <group>
                        <field name="name"/>
                        <field name="curso_id"/>
                        <field name="pregunta"/>
                        <field name="respuesta"/>
                        <field name="punteo"/>
                    </group>
                    <footer>
                        <button name="execute_action" string="Actualizar" type="object" class="oe_highlight"/>
                        <button string="Cancelar" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Wizard para Eliminar -->
        <record id="view_examen_wizard_eliminar" model="ir.ui.view">
            <field name="name">examen.wizard.eliminar</field>
            <field name="model">examen.wizard</field>
            <field name="arch" type="xml">
                <form string="¿Eliminar Examen?">
                    <group>
                        <label string="¿Está seguro que desea eliminar el siguiente examen?"/>
                        <field name="name" readonly="1"/>
                        <field name="curso_id" readonly="1"/>
                        <field name="pregunta" readonly="1"/>
                        <field name="respuesta" readonly="1"/>
                        <field name="punteo" readonly="1"/>
                    </group>
                    <footer>
                        <button name="execute_action" string="Eliminar" type="object" class="oe_highlight"/>
                        <button string="Cancelar" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Acciones para los wizards -->
        <record id="action_examen_wizard_agregar" model="ir.actions.act_window">
            <field name="name">Agregar Examen</field>
            <field name="res_model">examen.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_examen_wizard_agregar"/>
            <field name="target">new</field>
        </record>

        <record id="action_examen_wizard_actualizar" model="ir.actions.act_window">
            <field name="name">Actualizar Examen</field>
            <field name="res_model">examen.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_examen_wizard_actualizar"/>
            <field name="target">new</field>
        </record>

        <record id="action_examen_wizard_eliminar" model="ir.actions.act_window">
            <field name="name">Eliminar Examen</field>
            <field name="res_model">examen.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_examen_wizard_eliminar"/>
            <field name="target">new</field>
        </record>
    </data>
</openerp>