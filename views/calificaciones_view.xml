<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Form View para Calificacion -->
        <record id="view_calificacion_form" model="ir.ui.view">
            <field name="name">school.calificacion.form</field>
            <field name="model">school.calificacion</field>
            <field name="arch" type="xml">
                <form string="Calificación de Estudiante">
                    <sheet>
                        <group>
                            <group string="Información del Estudiante">
                                <field name="alumno_id" readonly="1"/>
                                <field name="examen_id" readonly="1"/>
                            </group>
                            <group string="Calificación">
                                <field name="punteo"/>
                                <field name="punteo_maximo" readonly="1"/>
                                <field name="porcentaje_obtenido" readonly="1"/>
                                <field name="aprobado" readonly="1"/>
                                <field name="estado"/>
                            </group>
                        </group>
                        <group>
                            <group string="Respuesta del Estudiante">
                                <field name="respuesta_estudiante" placeholder="Respuesta o trabajo entregado por el estudiante..."/>
                            </group>
                            <group string="Evaluación del Profesor">
                                <field name="comentarios" placeholder="Comentarios y retroalimentación del profesor..."/>
                                <field name="fecha_entrega" readonly="1"/>
                                <field name="fecha_calificacion" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View para Calificacion -->
        <record id="view_calificacion_tree" model="ir.ui.view">
            <field name="name">school.calificacion.tree</field>
            <field name="model">school.calificacion</field>
            <field name="arch" type="xml">
                <tree colors="red:not aprobado;green:aprobado;blue:estado=='pendiente'" editable="bottom">
                    <field name="alumno_id"/>
                    <field name="punteo"/>
                    <field name="punteo_maximo" readonly="1"/>
                    <field name="porcentaje_obtenido" readonly="1"/>
                    <field name="aprobado" readonly="1"/>
                    <field name="estado"/>
                    <field name="fecha_entrega"/>
                    <field name="comentarios"/>
                </tree>
            </field>
        </record>

        <!-- Action para Calificacion -->
        <record id="action_calificacion" model="ir.actions.act_window">
            <field name="name">Calificaciones</field>
            <field name="res_model">school.calificacion</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_calificacion_tree"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click para crear una nueva calificación.
                </p>
                <p>
                    Las calificaciones representan el punteo obtenido por cada estudiante en un examen específico.
                </p>
            </field>
        </record>
    </data>
</openerp>