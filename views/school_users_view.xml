<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <!-- Vista Form del Usuario Extendido -->
        <record id="view_users_form_school" model="ir.ui.view">
            <field name="name">res.users.form.school</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <group string="Informacion Escolar">
                        <group string="Rol en el Sistema">
                            <field name="school_role"/>
                            <field name="registration_date" readonly="1"/>
                            <field name="is_active_student" attrs="{'invisible': [('school_role', '!=', 'student')]}"/>
                        </group>
                        <group string="Codigos y Numeros">
                            <field name="student_number" attrs="{'invisible': [('school_role', '!=', 'student')]}"/>
                            <field name="teacher_code" attrs="{'invisible': [('school_role', '!=', 'teacher')]}"/>
                            <field name="grade_level"/>
                        </group>
                    </group>
                    <group string="Informacion de Contacto">
                        <group>
                            <field name="phone_number"/>
                            <field name="emergency_contact"/>
                        </group>
                        <group>
                            <field name="parent_email"/>
                            <field name="alumno_id" attrs="{'invisible': [('school_role', '!=', 'student')]}"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Vista Tree de Usuarios con informacion escolar -->
        <record id="view_users_tree_school" model="ir.ui.view">
            <field name="name">res.users.tree.school</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <tree colors="blue:school_role=='super_admin';green:school_role=='teacher';orange:school_role=='student'">
                    <field name="name"/>
                    <field name="login"/>
                    <field name="school_role"/>
                    <field name="student_number"/>
                    <field name="teacher_code"/>
                    <field name="is_active_student"/>
                    <field name="registration_date"/>
                </tree>
            </field>
        </record>

        <!-- Vista de busqueda para usuarios escolares -->
        <record id="view_users_search_school" model="ir.ui.view">
            <field name="name">res.users.search.school</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <search string="Usuarios Escolares">
                    <field name="name" string="Nombre"/>
                    <field name="login" string="Usuario"/>
                    <field name="school_role" string="Rol Escolar"/>
                    <field name="student_number" string="Numero de Estudiante"/>
                    <field name="teacher_code" string="Codigo de Maestro"/>
                    <separator/>
                    <filter string="Super Administradores" domain="[('school_role','=','super_admin')]"/>
                    <filter string="Maestros" domain="[('school_role','=','teacher')]"/>
                    <filter string="Alumnos" domain="[('school_role','=','student')]"/>
                    <filter string="Estudiantes Activos" domain="[('school_role','=','student'),('is_active_student','=',True)]"/>
                    <separator/>
                    <group expand="0" string="Agrupar por">
                        <filter string="Rol Escolar" context="{'group_by':'school_role'}"/>
                        <filter string="Estado de Estudiante" context="{'group_by':'is_active_student'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Accion para gestion de usuarios escolares -->
        <record id="action_school_users" model="ir.actions.act_window">
            <field name="name">Usuarios del Sistema Escolar</field>
            <field name="res_model">res.users</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_users_tree_school"/>
            <field name="search_view_id" ref="view_users_search_school"/>
            <field name="domain">[('school_role', 'in', ['super_admin', 'teacher', 'student'])]</field>
            <field name="context">{'default_school_role': 'student'}</field>
        </record>

        <!-- === WIZARD DE REGISTRO === -->
        
        <!-- Vista Form del Wizard de Registro -->
        <record id="view_school_user_registration_form" model="ir.ui.view">
            <field name="name">school.user.registration.form</field>
            <field name="model">school.user.registration</field>
            <field name="arch" type="xml">
                <form string="Crear Perfil de Acceso">
                    <header>
                        <h1>Crear Perfil de Acceso al Sistema</h1>
                        <p><strong>Solo Super Admin:</strong> Crear perfiles para que personas accedan desde otros dispositivos</p>
                    </header>
                    <sheet>
                        <group>
                            <group string="ï¿½ Datos de la Persona">
                                <field name="name"/>
                                <field name="login"/>
                                <field name="school_role" widget="radio"/>
                            </group>
                            <group string="Credenciales de Acceso">
                                <field name="password" password="True"/>
                                <p class="text-muted">La persona podra cambiar esta contrasena despues</p>
                            </group>
                        </group>
                        
                        <!-- Informacion especifica para ESTUDIANTES -->
                        <group string="Configuracion del Estudiante" 
                               attrs="{'invisible': [('school_role', '!=', 'student')]}">
                            <group>
                                <field name="grade_level"/>
                                <field name="aula_id" attrs="{'required': [('school_role', '=', 'student')]}"/>
                            </group>
                            <group>
                                <field name="parent_email"/>
                                <field name="emergency_contact"/>
                            </group>
                        </group>
                        
                        <!-- Informacion especifica para MAESTROS -->
                        <group string="Configuracion del Maestro" 
                               attrs="{'invisible': [('school_role', '!=', 'teacher')]}">
                            <group>
                                <field name="specialization"/>
                            </group>
                        </group>
                        
                        <!-- Informacion de contacto general -->
                        <group string="Informacion de Contacto">
                            <field name="phone_number"/>
                        </group>
                        
                        <group string="Informacion Adicional">
                            <field name="notes" nolabel="1"/>
                        </group>
                        
                        <div class="alert alert-success">
                            <h4>Que pasara automaticamente?</h4>
                            <ul attrs="{'invisible': [('school_role', '!=', 'student')]}">
                                <li><strong>Numero de estudiante:</strong> Se genera automaticamente (ej: 2025001)</li>
                                <li><strong>Perfil de alumno:</strong> Se crea en la base de datos</li>
                                <li><strong>Permisos:</strong> Solo lectura de cursos, horarios y examenes</li>
                                <li><strong>Acceso:</strong> Puede entrar desde cualquier dispositivo</li>
                            </ul>
                            <ul attrs="{'invisible': [('school_role', '!=', 'teacher')]}">
                                <li><strong>Codigo de maestro:</strong> Se genera automaticamente (ej: PROF001)</li>
                                <li><strong>Permisos:</strong> Gestionar cursos, alumnos, aulas y examenes</li>
                                <li><strong>Acceso:</strong> Puede entrar desde cualquier dispositivo</li>
                                <li><strong>Limitacion:</strong> NO puede crear otros usuarios</li>
                            </ul>
                        </div>
                    </sheet>
                    <footer>
                        <button name="register_user" string="Crear Perfil de Acceso" type="object" class="oe_highlight"/>
                        <button string="Cancelar" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Vista de login personalizada (hereda de la base) -->
        <record id="view_login_form_school" model="ir.ui.view">
            <field name="name">Login School Management</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <form string="Login Sistema Escolar">
                    <div class="oe_login_form">
                        <h2>Sistema de Gestion Escolar</h2>
                        <div class="oe_login_buttons">
                            <button type="button" class="btn btn-primary" onclick="window.location.href='/web/signup'">
                                Registrarse como Nuevo Usuario
                            </button>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vista Form del Wizard de Resultado -->
        <record id="view_school_user_registration_result_form" model="ir.ui.view">
            <field name="name">school.user.registration.result.form</field>
            <field name="model">school.user.registration.result</field>
            <field name="arch" type="xml">
                <form string="Perfil de Acceso Creado">
                    <header>
                        <h1 style="color: green;">âœ… Perfil Creado Exitosamente</h1>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h2>Credenciales de Acceso Generadas</h2>
                        </div>
                        <group>
                            <field name="message" widget="text" nolabel="1" readonly="1" 
                                   style="white-space: pre-line; font-family: monospace; background-color: #f0f0f0; padding: 10px; border: 1px solid #ccc;"/>
                        </group>
                        <div style="margin-top: 20px; padding: 10px; background-color: #d4edda; border: 1px solid #c3e6cb; border-radius: 5px;">
                            <strong>ðŸ“± Acceso desde otros dispositivos:</strong><br/>
                            La persona puede ingresar desde cualquier navegador web usando las credenciales mostradas arriba.
                        </div>
                    </sheet>
                    <footer>
                        <button string="Cerrar" type="object" name="action_close" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>